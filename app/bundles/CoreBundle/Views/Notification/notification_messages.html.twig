{% if updateMessage.message is not empty %}
<div class="media pt-sm pb-sm pr-md pl-md nm bdr-b alert-milex milex-update">
    <h4 class="pull-left">{{ updateMessage.message|raw }}</h4>
    <div class="pull-right">
        <a class="btn btn-danger" href="{{ path('milex_core_update') }}" data-toggle="ajax">{% trans %}milex.core.update.now{% endtrans %}</a>
    </div>
    <div class="clearfix"></div>
</div>
{% endif %}
{% for n in notifications %}
    {{ include('MilexCoreBundle:Notification:notification.html.twig', {n: n}) }}
{% endfor %}